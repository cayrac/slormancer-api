{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "experimentalDecorators": true, 
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}